{{#contentFor "body_class"}}{{#if @site.cover_image}} with-full-cover is-head-transparent{{/if}}{{#if @member}} logged-in{{/if}}{{/contentFor}}

{{!< bodywrap}}

<div class="site home">
    <header id="gh-head" class="gh-head gh-outer">
        <div class="gh-head-inner">
            <nav class="gh-head-menu loading-event loading">
                {{!-- {{navigation}} --}}
                <img class="site-logo" src="{{@site.icon}}">
            </nav>
        </div>
    </header>

    <div class="cover loading-event loading gh-outer">
        {{#if @site.cover_image}}
            <img class="cover-image u-object-fit" src="{{@site.cover_image}}" alt="{{@site.title}}">
            <div id="cover-image-blur"></div>
        {{/if}}

        <div class="cover-content">
            <img class="cover-logo" src="{{@site.logo}}" alt="{{@site.title}}">
            {{#if @site.description}}
                <div class="cover-description">
                    {{@site.title}} &nbsp;&nbsp; {{@site.description}}
                </div>
            {{/if}}
        </div>

        <button class="button-icon cover-arrow">
            {{> "icons/caret-down"}}
        </button>
    </div>

    <div class="site-content">
        <main class="site-main">
            {{#post}}
                {{> "content" width="wide"}}
            {{/post}}
        </main>
    </div>

    <footer class="gh-foot gh-outer">
        <div class="gh-foot-inner gh-inner">
            <div class="gh-copyright">
                
            </div>
            <nav class="gh-foot-menu">
            </nav>
            <div class="gh-powered-by">
            </div>
        </div>
    </footer>

</div>

{{#is "post, page"}}
{{> "pswp"}}
{{/is}}

{{!-- Fixes 100vh issue on mobile browsers with toolbar on the bottom --}}
<script>
if (document.body.classList.contains('with-full-cover') && (/Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.platform))) {
    document.getElementsByClassName('cover')[0].style.height = window.innerHeight + 'px';
}
</script>
<script src="{{asset "built/main.min.js"}}"></script>


