{
    "name": "randol",
    "description": "A clean, minimal newsletter theme for the Ghost publishing platform",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Ghost Foundation",
        "email": "hello@ghost.org",
        "url": "https://ghost.org"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "docs": "https://edition.ghost.io/about/",
    "config": {
        "custom": {
            "background_color": {
                "type": "color",
                "default": "#BFCBC9",
                "group": "design"
            },
            "text_color": {
                "type": "color",
                "default": "#000000",
                "group": "design"
            },
            "invert_text_color": {
                "type": "color",
                "default": "#ffffff",
                "group": "design"
            },
            "accent_background": {
                "type": "color",
                "default": "#1D231E",
                "group": "design"
            },

            "landing_image": {
                "type": "image",
                "group": "design"
            },
            "landing_image_mobile": {
                "type": "image",
                "group": "design"
            },
            "background_image": {
                "type": "image",
                "group": "design"
            },
            "ganesh_logo": {
                "type": "image",
                "group": "design"
            },
            "polaroid_1": {
                "type": "image",
                "group": "design"
            },
            "title_font": {
                "type": "select",
                "options": [
                    "Playwrite US Trad",
                    "Ovo",
                    "Playwrite US Trad",
                    "Playwrite IT Trad",
                    "Playwrite AU QLD",
                    "Patrick Hand"
                ],
                "default": "Playwrite AU QLD",
                "group": "fonts"
            },
            "body_font": {
                "type": "select",
                "options": [
                    "Playwrite US Trad",
                    "Ovo",
                    "Shadows Into Light",
                    "Shadows Into Light Two",
                    "Playwrite IT Trad",
                    "Playwrite AU QLD",
                    "Patrick Hand"
                ],
                "default": "Shadows Into Light Two",
                "group": "fonts"
            },
            "cover_font": {
                "type": "select",
                "options": [
                    "Playwrite US Trad",
                    "Ovo",
                    "Shadows Into Light",
                    "Shadows Into Light Two",
                    "Playwrite IT Trad",
                    "Playwrite AU QLD",
                    "Patrick Hand"
                ],
                "default": "Ovo",
                "group": "fonts"
            },

            "mobile_width": {
                "type": "text",
                "group": "design",
                "default": "740px"
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "test": "gscan .",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "@tryghost/shared-theme-assets": "2.4.5",
        "autoprefixer": "10.4.20",
        "beeper": "2.1.0",
        "cssnano": "7.0.6",
        "gscan": "4.45.0",
        "gulp": "5.0.0",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "10.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "ordered-read-streams": "2.0.0",
        "postcss": "8.4.49",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.2"
    },
    "dependencies": {
        "edition": "file:",
        "randol": "file:"
    }
}
